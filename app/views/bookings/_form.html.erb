<div class="banner3">
<div class="container">
  <h1 class="text-center">Book this festival</h1>
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <div class="row">
      <%= simple_form_for([festival, booking]) do |f| %>

      <div class="form-group">
        <%= f.input :status, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :total_price, as: :integer, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :start_date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :end_date, class: 'form-control'%>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Home", root_path, class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>
</div>
