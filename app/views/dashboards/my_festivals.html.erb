<div class="container">
<h2 class="text-center">These are all the festivals that you are hosting.</h2>
  <div class="row">
    <% @festivals.each do |festival| %>
    <div class="col-xs-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= image_path festival.photo, height: 300, width: 400 %>')">
      <div class="card-category"><%= festival.title %></div>
      <!-- <div class="card-description"><%= festival.description %></div> -->
      <!-- festival.photo #scrape, parse to seed database then interpolate photo from hash??? -->
      <%= link_to "More Info", festival_path(festival), class: "button_card" %>


    </div>
  </div>
  <% end %>
   <%= link_to "Add a festival", new_festival_path, class: "button" %>
</div>
