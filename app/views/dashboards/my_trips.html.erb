<div class="container">
<h2 class="text-center">These are all the festivals that you are attending:</h2>
  <div class="row">
    <% @bookings.each do |booking| %>
    <div class="col-xs-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= image_path booking.festival.photo, height: 300, width: 400 %>')">
      <div class="card-category"><%= booking.status %></div>
      <div class="card-description"><%= booking.festival.description %></div>

      <%= link_to "More Info", festival_path(booking.festival), class: "button_card" %>


    </div>
  </div>
  <% end %>

</div>

